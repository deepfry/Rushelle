extends layout
block head
	title= 'Rushelle.com - Contact'
block content

	section
		.container
			.row.center.pt-xlg.mt-xlg.pb-lg.mb-lg
				.col-md-8.col-md-offset-2.pb-md
					h2.font-weight-normal.custom-font-size-1.mb-lg Get in Touch
					p
						| Send me any questions or comments
					#contactSuccess.alert.alert-success.hidden.mt-lg
						strong Success!
						|  Your message has been sent!
					#contactError.alert.alert-danger.hidden.mt-lg
						strong Error!
						|  There was an error sending your message.
						span#mailErrorMessage.font-size-xs.mt-sm.display-block
					form#contactForm.form(novalidate='novalidate' netlify name='Contact Form')
						.row
							.form-group.align-left
								.col-md-12
									input#name.form-control(type='text', placeholder='Your Name', value='', data-msg-required='Please enter your name.', maxlength='100', name='name', required='', aria-required='true')
						.row
							.form-group.align-left
								.col-md-12
									input#email.form-control(type='email', placeholder='Your E-mail', value='', data-msg-required='Please enter your email address.', data-msg-email='Please enter a valid email address.', maxlength='100', name='email', required='', aria-required='true')
						.row
							.form-group.align-left
								.col-md-12
									input#subject.form-control(type='text', placeholder='Subject', value='', data-msg-required='Please enter the subject.', maxlength='100', name='subject', required='', aria-required='true')
						.row
							.form-group.align-left
								.col-md-12
									textarea#message.form-control(maxlength='5000', placeholder='Message', data-msg-required='Please enter your message.', rows='10', name='message', required='', aria-required='true')
						.row
							.col-md-12
								input.btn.btn-quaternary.btn-borders.btn-lg.text-uppercase.font-weight-semibold(type='submit', value='Send Message', data-loading-text='Loading...')
